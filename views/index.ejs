<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body class="p-0">
  <header class="navbar navbar-dark bg-primary">
    <div class="container">
      <h1 class="navbar-brand m-0">
        <%= title %>
      </h1>
      <ul class="navbar-nav">
        <li class="nav-item btn btn-outline-dark ">
          <a href="/new" class=" text-light nav-link p-0">New Message</a>
        </li>
      </ul>
    </div>
  </header>
  <main>
    <div class="container p-4">
      <% messages.forEach((message)=> { %>
        <div class=" card text-center border-dark  text-dark mx-auto my-3" style="max-width: 36rem">
          <div class="card-header">
            <h5 class="card-title ">
              <%= message.user%>
            </h5>
          </div>
          <div class="card-body">
            <p class="card-text">
              <%= message.text%>
            </p>
          </div>
        </div>
        <% }) %>
    </div>
  </main>
</body>

</html>